<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">


    <android.support.constraint.ConstraintLayout
        android:layout_width="304dp"
        android:layout_height="256dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/localGame"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Local Game"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/baloo"
            android:background="@color/ticBtnBG"
            app:layout_constraintBottom_toTopOf="@+id/onlineGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/onlineGame"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Online Game"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:fontFamily="@font/baloo"
            android:background="@color/ticBtnBG"
            app:layout_constraintBottom_toTopOf="@+id/stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/localGame" />

        <Button
            android:id="@+id/stats"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Stats"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/baloo"
            android:background="@color/ticBtnBG"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onlineGame" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>